{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup_python_env",
            "type": "shell",
            "linux": {
                "command": "${input:isaacsim_path}/python.sh",
                "args": [
                    "${workspaceFolder}/.vscode/tools/setup_vscode.py",
                    "--isaacsim_path",
                    "${input:isaacsim_path}",
                    "--isaaclab_path",
                    "${input:isaaclab_path}"
                    ]
            },
            "windows": {
                "command": "${input:isaacsim_path}/python.bat",
                "args": [
                    "${workspaceFolder}/.vscode/tools/setup_vscode.py",
                    "--isaacsim_path",
                    "${input:isaacsim_path}",
                    "--isaaclab_path",
                    "${input:isaaclab_path}"
                    ]
            },
            "options": {
              "cwd": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "isaacsim_path",
            "description": "Absolute path to the current Isaac Sim installation. Can be skipped if Isaac Sim installed from pip.",
            "default": "${HOME}/isaacsim",
            "type": "promptString"
        },
        {
            "id": "isaaclab_path",
            "type": "promptString",
            "description": "Absolute path to Isaac Lab installation",
            "default": "${HOME}/isaaclab"
        }
    ]
}
